<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sj.netease">
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <application
        android:name=".service.NetEaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splash.acitvity.SplashAcitvity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".splash.acitvity.WebViewActivity"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".news.activity.DetailImgActivity"></activity>
        <activity android:name=".news.activity.DetailActivity" android:theme="@style/back_transparent"></activity>
        <activity android:name=".news.activity.FeedbackAcitvity"></activity>
      <service android:name=".service.DownLoadService"></service>
    </application>

</manifest>