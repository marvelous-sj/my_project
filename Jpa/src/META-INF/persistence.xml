<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd " version="2.0">
<persistence-unit name="xyz.marsj.jpa" >
 
  <properties>
<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" /> 
<property name="javax.persistence.jdbc.url" value="jdbc:mysql:///hibernate?useSSL=false" /> 
<property name="javax.persistence.jdbc.user" value="root" />

 <property name="hibernate.show_sql" value="true" /> 
 <property name="hibernate.hbm2ddl.auto" value="create" /> 
 
 
 <property name="javax.persistence.validation.mode" value="auto" />
 </properties>
 
</persistence-unit>
</persistence>
 
 
